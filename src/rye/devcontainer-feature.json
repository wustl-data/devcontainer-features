{
    "name": "Rye",
    "id": "rye",
    "version": "1.0.16",
    "description": "A New Kind Of Package Management Solution for Python",
    "installsAfter": [
        "mcr.microsoft.com/devcontainers/python"
    ],
    "containerEnv": {
        "RYE_INSTALL_OPTION": "--yes",
        "RYE_HOME": "/usr/local/share/rye",
        "RYE_TOOLCHAIN": "/usr/local/bin/python"
    },
    "postCreateCommand": "echo '. /usr/local/share/rye/env' >> $HOME/.bashrc"
}
